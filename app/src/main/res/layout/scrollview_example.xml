                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgBlackWidow"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/widow"
                android:layout_margin="20dp"/>

            <TextView
                android:id="@+id/txtNameNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Natasha Romanova"
                android:textSize="18sp"
                android:layout_toEndOf="@id/imgBlackWidow"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                />

            <TextView
                android:id="@+id/txtEmailNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="natasha@starkindustries.com"
                android:textSize="18sp"
                android:layout_toEndOf="@id/imgBlackWidow"
                android:layout_below="@id/txtNameNatasha"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:id="@+id/txtPhoneNumberNatasha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+91 66655555"
                android:textSize="18sp"
                android:layout_toEndOf="@id/imgBlackWidow"
                android:layout_below="@id/txtEmailNatasha"
                android:textColor="#000000"
                android:layout_marginTop="15dp"
                />

        </RelativeLayout>

    </LinearLayout>

</ScrollView>